# Veeam Insight Dashboard - Production Environment Configuration
# Copy this file to .env and configure with your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3001
WS_PORT=3002

# =============================================================================
# VEEAM BACKUP & REPLICATION CONFIGURATION
# =============================================================================
# Veeam B&R Server Details
VEEAM_SERVER=your-veeam-server.domain.com
VEEAM_USERNAME=your-veeam-username
VEEAM_PASSWORD=your-veeam-password
VEEAM_PORT=9419

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secrets (Generate strong random strings)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Option 1: Use Docker Redis (default)
REDIS_URL=redis://redis:6379

# Option 2: Use External Redis (uncomment and configure)
# REDIS_HOST=your-redis-server.domain.com
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# Cache Settings
CACHE_TTL=300

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# General API Rate Limiting (15 minutes window)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Login Rate Limiting (15 minutes window)
LOGIN_RATE_LIMIT_WINDOW=900000
LOGIN_RATE_LIMIT_MAX=5

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
# Health check interval (30 seconds)
HEALTH_CHECK_INTERVAL=30000

# Alert check interval (1 minute)
ALERT_CHECK_INTERVAL=60000

# =============================================================================
# WHATSAPP INTEGRATION (OPTIONAL)
# =============================================================================
# Leave empty to disable WhatsApp notifications
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER=

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# =============================================================================
# SSL CONFIGURATION (for self-signed certificates)
# =============================================================================
# Set to true if using self-signed certificates
NODE_TLS_REJECT_UNAUTHORIZED=0

# =============================================================================
# PRODUCTION OPTIMIZATIONS
# =============================================================================
# Memory settings for Node.js
NODE_OPTIONS=--max-old-space-size=2048

# Cluster mode (number of worker processes)
CLUSTER_WORKERS=2