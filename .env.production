# Veeam Insight Dashboard - Production Environment Configuration
# Copy this file to .env and configure with your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3001
WS_PORT=3002
CORS_ORIGIN=http://10.60.10.59:9007

# Frontend Environment Variables
VITE_API_URL=http://10.60.10.59:9007/api
VITE_WS_URL=http://10.60.10.59:9007

# =============================================================================
# SSL/HTTPS CONFIGURATION
# =============================================================================
# Set to 'true' to enable HTTPS, 'false' for HTTP only
ENABLE_SSL=false
# SSL certificate paths (only used when ENABLE_SSL=true)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
# HTTP and HTTPS ports for nginx
HTTP_PORT=9007
HTTPS_PORT=9008

# =============================================================================
# VEEAM BACKUP & REPLICATION CONFIGURATION
# =============================================================================
# Veeam B&R Server Details (matches server code variables)
VEEAM_BASE_URL=https://your-veeam-server.domain.com:9419
VEEAM_API_VERSION=1.1-rev1
VEEAM_USERNAME=your-veeam-username
VEEAM_PASSWORD=your-veeam-password
VEEAM_VERIFY_SSL=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secrets (Generate strong random strings)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=7d

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL=300
CACHE_CHECK_PERIOD=600

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Rate Limiting (matches server code variables)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
# Monitoring intervals (matches server code variables)
MONITORING_INTERVAL=30000
ALERT_CHECK_INTERVAL=60000
HEALTH_CHECK_INTERVAL=30
METRICS_INTERVAL=60

# =============================================================================
# WHATSAPP INTEGRATION (OPTIONAL)
# =============================================================================
# WhatsApp Configuration (matches server code variables)
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=
WHATSAPP_CHAT_ID=
WHATSAPP_ENABLED=false
WHATSAPP_DEFAULT_RECIPIENTS=

# =============================================================================
# SSL CONFIGURATION (for self-signed certificates)
# =============================================================================
# Set to true if using self-signed certificates
NODE_TLS_REJECT_UNAUTHORIZED=0

# =============================================================================
# PRODUCTION OPTIMIZATIONS
# =============================================================================
# Memory settings for Node.js
NODE_OPTIONS=--max-old-space-size=2048

# Cluster mode (number of worker processes)
CLUSTER_WORKERS=2