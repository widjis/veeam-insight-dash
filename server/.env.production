# Veeam Insight Dashboard Configuration - Production
# Server Configuration
PORT=3001
NODE_ENV=production
CORS_ORIGIN=http://localhost:9007

# Veeam API Configuration
VEEAM_BASE_URL=https://your-veeam-server.domain.com:9419
VEEAM_API_VERSION=1.1-rev1
VEEAM_USERNAME=your-veeam-username
VEEAM_PASSWORD=your-veeam-password
VEEAM_VERIFY_SSL=false

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=7d

# Cache Configuration
CACHE_TTL=300
CACHE_CHECK_PERIOD=600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# WebSocket Configuration
WS_PORT=3002

# Monitoring Configuration
MONITORING_INTERVAL=30000
ALERT_CHECK_INTERVAL=60000
HEALTH_CHECK_INTERVAL=30
METRICS_INTERVAL=60

# WhatsApp Integration (Optional)
WHATSAPP_API_URL=http://your-whatsapp-api-server:8192
# WHATSAPP_API_TOKEN= # Not required for this API implementation
WHATSAPP_CHAT_ID=your-whatsapp-group-id@g.us
WHATSAPP_ENABLED=false
WHATSAPP_DEFAULT_RECIPIENTS=your-phone-number

# Database (Future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/veeam_dashboard

# Email Configuration (Future use)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password