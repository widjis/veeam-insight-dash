# Veeam Insight Dashboard Configuration
# Server Configuration
PORT=3003
NODE_ENV=production
CORS_ORIGIN=http://localhost:9007,http://127.0.0.1:9007,https://localhost:9008,https://127.0.0.1:9008

# Veeam API Configuration
VEEAM_BASE_URL=https://your-veeam-server:9419
VEEAM_API_VERSION=1.1-rev1
VEEAM_USERNAME=your-veeam-username
VEEAM_PASSWORD=your-veeam-password
VEEAM_VERIFY_SSL=false

# Authentication
JWT_SECRET=your-jwt-secret-key-here-generate-a-secure-random-string
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here-generate-a-secure-random-string
JWT_REFRESH_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=7d

# Cache Configuration
CACHE_TTL=300
CACHE_CHECK_PERIOD=600

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# WebSocket Configuration
WS_PORT=3002

# Monitoring Configuration
MONITORING_INTERVAL=30000
ALERT_CHECK_INTERVAL=60000
HEALTH_CHECK_INTERVAL=30
METRICS_INTERVAL=60

# WhatsApp Integration (Optional)
WHATSAPP_API_URL=http://your-whatsapp-server:8192
WHATSAPP_API_TOKEN=your-whatsapp-api-token-here
WHATSAPP_CHAT_ID=your-whatsapp-group-id@g.us
WHATSAPP_ENABLED=false
WHATSAPP_DEFAULT_RECIPIENTS=your-phone-number
WHATSAPP_PHONE_NUMBER=your-phone-number

